
<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <a class="navbar-brand" href="/"><i class="fas fa-dove"></i>トラポス</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if logged_in? %>
          <li class="search-nav">
            <%= form_tag(search_trainingposts_path, method: :get) do%>
            <div class="input-group">
              <%= text_field_tag :search, nil, placeholder: 'キーワードを入力してみよう！', class: "form-control size:30" %>
              <span class="input-group-btn">
                <%= submit_tag '検索', class: 'btn btn-secondary' %>
              </span>
            </div>
            <% end %>
        </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= current_user.name %></a>
            <ul class="dropdown-menu dropdown-menu-right">
              <li class="dropdown-item">
                <%= link_to  user_path(current_user) do %>
                  <i class="fas fa-user-circle"></i> プロフィール
                <% end %>
                </li>
              <li class="dropdown-item">
                <%= link_to new_trainingpost_path do %>
                  <i class="far fa-paper-plane"></i> 投稿
                <% end %>
              </li>
              <li class="dropdown-divider"></li>
              <li class="dropdown-item">
                <%= link_to logout_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to signup_path, class: 'nav-link' do %>
            <i class="far fa-address-card"></i> 新規登録
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to login_path, class: 'nav-link' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>